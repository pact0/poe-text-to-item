{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "./dist",
        "allowJs": true,
        "module": "commonjs",
        "target": "es2021",
        "declaration": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "paths": {
            "@models/*": ["src/models/*"],
            "@utils/*": ["src/utils/*"],
            "@bases/*": ["src/bases/*"],
            "@parsers/*": ["src/parsers/*"],
            "@resource/*": ["src/resource/*"],
            "@root/*": ["src/*"]
        },
        "plugins": [
        {
        "transform": "typescript-transform-paths"
    }]
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*.ts"]
}
